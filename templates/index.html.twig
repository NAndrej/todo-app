{% extends "base.html.twig" %}

{% block title %} TODO Application {% endblock %}

{% block stylesheets %} <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> {% endblock %}

{% block body %} 

    <div class="form-group">
        <form method="post", action="{{ url("insert_task") }}">
            <input type="text" name="task" placeholder="Insert a task here">
            <input type="submit" value="Submit" class="btn btn-dark">
        </form>
        </br>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr><td scope="col"><h1>Tasks</h1></td></tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr scpe>
                        <td scope="col">
                            {% if item.isTaskDone() %}
                                <p><del>{{ item.getText() }}</del><p> 
                            {% else %}
                                <p>{{ item.getText() }}<p> 
                            {% endif %}
                            <a style='text-decoration:none' href="{{ path('finish_task', {'id': item.id }) }}"><button class="btn btn-dark">Done</button></a>
                            <a style='text-decoration:none' href="{{ path('delete_task', {'id': item.id }) }}"><button class="btn btn-dark">Delete</button></a>
                        </td>
                    </tr>
                    </br>
                {% endfor %}
            </tbody>
        </table> 
    </div>  
{% endblock %}